section.blog
  .wrap
    h2.section-title Writings
    h4.section-subtitle The latests posts of my blog.
    .row.blog-posts
      each post in ghostData
        .col-xs-12.col-sm-6.col-md-4.post-wrap
          article.post
            img.post-image(src=post.image, alt=post.title)
            .post-content
              header
                h2.post-title
                  a(href='/blog'+post.url, onmousedown="ga('send', 'event', 'Post', 'Click', '" +post.title+ "');", target="_blank", rel="noopener")=post.title
              .post-info
                time(datetime=post.published_at)=post.publishedAt
                span.post-tags
                  each tag in post.tags
                    a(class='post-tag '+tag.name, href='/blog/tag/'+tag.name, onmousedown="ga('send', 'event', 'Post', 'Click', 'tag-"+tag.name+"');", target="_blank", rel="noopener")='#'+tag.name
              p.post-excerpt=post.excerpt
            footer.post-footer
              a.read-more(href='/blog'+post.url, onmousedown="ga('send', 'event', 'Post', 'Click', 'Read More');", target="_blank", rel="noopener") Read more
                svg.icon.icon-arrow
                  use(xlink:href="#icon-arrow")
