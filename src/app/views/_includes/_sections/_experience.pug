section.experience
	.wrap
		h2.section-title Experience
		h4.section-subtitle Jobs as a Front End developer.
		each position in me.jobs
			article.row
				.col-xs-2.duration
					if position.time
						h2=position.time
				.col-xs-10.job-card
					.job
						h2.company-name=position.companyName
						.row.roles
							h4.cv-position-title=position.title
							.dates
								time.start(datetime=position.dateStart)=position.dateStart+' -'
								time.end(datetime=position.dateFinish)=position.dateFinish
						ul
							each task in position.tasks
								li=task
