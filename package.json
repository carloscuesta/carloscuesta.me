{
  "name": "carloscuesta.me",
  "version": "5.1.0",
  "engines": {
    "node": "14"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "yarn run test:lint && yarn run test:flow && yarn run test:unit && yarn run test:lighthouse",
    "test:flow": "flow",
    "test:lint": "eslint src",
    "test:lint:fix": "eslint src --fix",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:coverage": "codecov",
    "test:lighthouse": "yarn run build && lhci autorun",
    "postbuild": "cleancss public/prism/prism.css -o public/prism/prism.min.css && mv -f public/prism/prism.min.css public/prism/prism.css",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@mapbox/rehype-prism": "^0.8.0",
    "date-fns": "^2.28.0",
    "disqus-react": "^1.1.2",
    "gray-matter": "^4.0.3",
    "lazysizes": "^5.3.2",
    "lodash.debounce": "^4.0.8",
    "lodash.groupby": "^4.6.0",
    "next": "^12.1.5",
    "next-pwa": "^5.5.0",
    "next-seo": "^5.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.34.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^1.0.1",
    "rehype-preset-minify": "^6.0.0",
    "rehype-slug": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-toc": "^8.0.1",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-flow": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@lhci/cli": "^0.9.0",
    "clean-css-cli": "^5.6.0",
    "codecov": "^3.8.3",
    "eslint": "^8.13.0",
    "eslint-config-next": "^12.1.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-flowtype": "^8.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-react": "^7.29.4",
    "flow-bin": "^0.175.1",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^12.3.7",
    "next-sitemap": "^2.5.20",
    "react-test-renderer": "^17.0.2"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "env": {
      "jest": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:@next/next/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "next/babel",
          "@babel/preset-react",
          "@babel/preset-flow"
        ]
      }
    },
    "plugins": [
      "react",
      "flowtype"
    ],
    "rules": {
      "flowtype/require-valid-file-annotation": [
        2,
        "always",
        {
          "annotationStyle": "line"
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "@next/next/no-img-element": "off"
    },
    "overrides": [
      {
        "files": [
          "*.spec.js",
          "stubs.js",
          "**/__mocks__/*.js"
        ],
        "rules": {
          "flowtype/require-valid-file-annotation": 0,
          "react/display-name": 0,
          "react/prop-types": 0,
          "@next/next/no-css-tags": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect",
        "flowVersion": "detect"
      },
      "import/resolver": {
        "alias": {
          "map": [
            [
              "src",
              "./src"
            ]
          ]
        }
      }
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn run test:lint:fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/__tests__/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy",
      "src/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/**/*.(spec).(js)"
    ],
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "!/node_modules/unified"
    ]
  }
}
