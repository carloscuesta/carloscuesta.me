{
  "name": "carloscuesta.me",
  "version": "6.1.0",
  "engines": {
    "node": "22"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "test": "pnpm run test:lint && pnpm run tscheck && pnpm run test:unit && pnpm run test:lighthouse",
    "tscheck": "pnpm tsc --noEmit",
    "test:lint": "eslint src && prettier --check src",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:lighthouse": "pnpm run build && lhci autorun",
    "postbuild": "rm -rf public/mockServiceWorker.js && next-sitemap",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@codesandbox/sandpack-react": "2.20.0",
    "@headlessui/react": "2.2.9",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "15.5.4",
    "@plaiceholder/next": "2.5.0",
    "@types/lodash.truncate": "4.4.9",
    "@types/mdx": "2.0.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/kv": "3.0.0",
    "@vercel/speed-insights": "1.2.0",
    "date-fns": "^4.1.0",
    "feed": "5.1.0",
    "lodash.groupby": "^4.6.0",
    "lodash.truncate": "4.4.2",
    "next": "15.5.4",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.8.0",
    "next-themes": "0.4.6",
    "plaiceholder": "2.5.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-remove-scroll": "2.7.1",
    "rehype-autolink-headings": "7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-preset-minify": "7.0.1",
    "rehype-pretty-code": "0.14.1",
    "rehype-probe-image-size": "1.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-wrap-all": "^1.1.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "remark-mdx-frontmatter": "5.2.0",
    "remark-reading-time": "2.0.2",
    "remark-toc": "^9.0.0",
    "satori": "0.18.3",
    "sharp": "0.34.3",
    "shiki": "3.13.0",
    "sprinkles-vscode": "3.1.0",
    "swr": "2.3.6"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/postcss": "4.1.13",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/jest": "30.0.0",
    "@types/lodash.groupby": "4.6.9",
    "@types/react": "19.1.12",
    "@types/ungap__structured-clone": "1.2.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@ungap/structured-clone": "1.3.0",
    "classix": "2.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^16.1.6",
    "msw": "2.11.1",
    "next-sitemap": "^4.2.3",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "uglify-js": "3.19.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "jest": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:import/typescript",
      "plugin:@next/next/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "next/babel"
        ]
      }
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "@next/next/no-img-element": "off",
      "@typescript-eslint/no-var-requires": "off",
      "react/no-unescaped-entities": "off",
      "@typescript-eslint/no-require-imports": "off"
    },
    "overrides": [
      {
        "files": [
          "*.spec.tsx",
          "stubs.ts",
          "**/__mocks__/*.ts"
        ],
        "rules": {
          "react/display-name": 0,
          "react/prop-types": 0,
          "@next/next/no-css-tags": 0
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "react/no-unknown-property": [
            2,
            {
              "ignore": [
                "jsx",
                "global"
              ]
            }
          ]
        }
      },
      {
        "files": [
          "opengraph-image.tsx"
        ],
        "rules": {
          "react/no-unknown-property": [
            2,
            {
              "ignore": [
                "tw"
              ]
            }
          ]
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "alias": {
          "map": [
            [
              "src",
              "./src"
            ]
          ]
        }
      },
      "typescript": true,
      "node": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "src/**/*.{css,md,mdx}": [
      "prettier --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "pnpm@10.13.1"
}
