{
  "name": "carloscuesta.me",
  "version": "6.0.0",
  "engines": {
    "node": "18"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "yarn run test:lint && yarn run tscheck && yarn run test:unit && yarn run test:lighthouse",
    "tscheck": "yarn tsc --noEmit",
    "test:lint": "eslint src && prettier --check src",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:coverage": "codecov",
    "test:lighthouse": "yarn run build && lhci autorun",
    "postbuild": "cleancss public/prism.css -o public/prism.min.css && mv -f public/prism.min.css public/prism.css && rm -rf public/mockServiceWorker.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@headlessui/react": "1.7.17",
    "@plaiceholder/next": "2.5.0",
    "@types/lodash.truncate": "4.4.7",
    "@vercel/analytics": "^1.0.2",
    "@vercel/kv": "0.2.2",
    "add": "2.0.6",
    "body-scroll-lock": "4.0.0-beta.0",
    "date-fns": "^2.30.0",
    "disqus-react": "^1.1.5",
    "gray-matter": "^4.0.3",
    "lodash.debounce": "^4.0.8",
    "lodash.groupby": "^4.6.0",
    "lodash.truncate": "4.4.2",
    "next": "13.4.16",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.1.0",
    "next-themes": "0.2.1",
    "plaiceholder": "2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.2",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^2.1.0",
    "rehype-preset-minify": "^6.0.0",
    "rehype-prism-plus": "1.6.3",
    "rehype-slug": "^5.1.0",
    "rehype-stringify": "^9.0.4",
    "rehype-wrap-all": "^1.1.0",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.2",
    "remark-rehype": "^10.1.0",
    "remark-toc": "^8.0.1",
    "satori": "0.10.3",
    "sharp": "0.32.5",
    "swr": "2.2.2",
    "tailwind-scrollbar-hide": "1.1.7",
    "unified": "^10.1.2",
    "yarn": "1.22.19"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@tailwindcss/typography": "0.5.9",
    "@types/body-scroll-lock": "3.1.0",
    "@types/jest": "29.5.3",
    "@types/lodash.debounce": "4.0.7",
    "@types/lodash.groupby": "4.6.7",
    "@types/react": "18.2.20",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "autoprefixer": "10.4.15",
    "clean-css-cli": "^5.6.2",
    "codecov": "^3.8.3",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.4",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^14.0.1",
    "msw": "1.2.5",
    "next-sitemap": "^4.2.2",
    "postcss": "8.4.28",
    "prettier": "3.0.2",
    "prettier-plugin-tailwindcss": "0.5.3",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "jest": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:import/typescript",
      "plugin:@next/next/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "next/babel"
        ]
      }
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "@next/next/no-img-element": "off",
      "@typescript-eslint/no-var-requires": "off",
      "react/no-unescaped-entities": "off"
    },
    "overrides": [
      {
        "files": [
          "*.spec.tsx",
          "stubs.ts",
          "**/__mocks__/*.ts"
        ],
        "rules": {
          "react/display-name": 0,
          "react/prop-types": 0,
          "@next/next/no-css-tags": 0
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "react/no-unknown-property": [
            2,
            {
              "ignore": [
                "jsx",
                "global"
              ]
            }
          ]
        }
      },
      {
        "files": [
          "opengraph-image.tsx"
        ],
        "rules": {
          "react/no-unknown-property": [
            2,
            {
              "ignore": [
                "tw"
              ]
            }
          ]
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "alias": {
          "map": [
            [
              "src",
              "./src"
            ]
          ]
        }
      },
      "typescript": true,
      "node": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "src/**/*.md": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "16.20.0"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "yarn@1.22.19"
}
