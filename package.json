{
  "name": "carloscuesta.me",
  "version": "5.0.0",
  "engines": {
    "node": "12"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "npm run test:lint && npm run test:flow && npm run test:unit && npm run test:lighthouse",
    "test:flow": "flow",
    "test:lint": "standard | snazzy",
    "test:lint:fix": "standard --fix | snazzy",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:coverage": "codecov",
    "test:lighthouse": "npm run build && lhci autorun",
    "prebuild": "node ./scripts/sitemap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@mapbox/rehype-prism": "^0.5.0",
    "date-fns": "^2.15.0",
    "gray-matter": "^4.0.2",
    "lazysizes": "^5.2.2",
    "lodash.groupby": "^4.6.0",
    "next": "^9.5.1",
    "next-seo": "^4.7.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rehype-preset-minify": "^5.0.3",
    "rehype-stringify": "^8.0.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-external-links": "^6.1.0",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.0.0",
    "unified": "^9.1.0"
  },
  "devDependencies": {
    "@babel/preset-flow": "^7.10.4",
    "@lhci/cli": "^0.4.3",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.7.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "flow-bin": "^0.130.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.2.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.2.11",
    "react-test-renderer": "16.13.1",
    "sitemap": "^6.2.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.3"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@babel/preset-flow"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest"
    ],
    "ignore": [
      "public/**/*"
    ],
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "$Diff",
      "fetch"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test:lint:fix",
      "npm run test:flow"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/__tests__/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy",
      "src/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/**/*.(spec).(js)"
    ]
  }
}
