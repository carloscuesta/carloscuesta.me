{
  "name": "carloscuesta.me",
  "version": "5.2.0",
  "engines": {
    "node": "16"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "yarn run test:lint && yarn run tscheck && yarn run test:unit && yarn run test:lighthouse",
    "tscheck": "yarn tsc --noEmit",
    "test:lint": "eslint src",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:coverage": "codecov",
    "test:lighthouse": "yarn run build && lhci autorun",
    "postbuild": "cleancss public/prism/prism.css -o public/prism/prism.min.css && mv -f public/prism/prism.min.css public/prism/prism.css",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@vercel/analytics": "^0.1.10",
    "date-fns": "^2.29.3",
    "disqus-react": "^1.1.5",
    "gray-matter": "^4.0.3",
    "lazysizes": "^5.3.2",
    "lodash.debounce": "^4.0.8",
    "lodash.groupby": "^4.6.0",
    "next": "^13.1.6",
    "next-pwa": "^5.6.0",
    "next-seo": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.4.2",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^2.0.1",
    "rehype-preset-minify": "^6.0.0",
    "rehype-prism-plus": "1.5.1",
    "rehype-slug": "^5.1.0",
    "rehype-stringify": "^9.0.3",
    "rehype-wrap-all": "^1.1.0",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-toc": "^8.0.1",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@lhci/cli": "^0.10.0",
    "@types/jest": "29.4.0",
    "@types/lodash.debounce": "4.0.7",
    "@types/lodash.groupby": "4.6.7",
    "@types/react": "18.0.28",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "clean-css-cli": "^5.6.2",
    "codecov": "^3.8.3",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.1.6",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.1.2",
    "next-sitemap": "^2.5.28",
    "react-test-renderer": "^18.2.0",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "jest": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:import/typescript",
      "plugin:@next/next/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "next/babel"
        ]
      }
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "@next/next/no-img-element": "off",
      "@typescript-eslint/no-var-requires": "off"
    },
    "overrides": [
      {
        "files": [
          "*.spec.tsx",
          "stubs.ts",
          "**/__mocks__/*.ts"
        ],
        "rules": {
          "react/display-name": 0,
          "react/prop-types": 0,
          "@next/next/no-css-tags": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "alias": {
          "map": [
            [
              "src",
              "./src"
            ]
          ]
        }
      },
      "typescript": true,
      "node": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "eslint --cache --fix"
    ]
  },
  "volta": {
    "node": "16.15.0"
  }
}
