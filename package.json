{
  "name": "carloscuesta.me",
  "version": "5.1.0",
  "engines": {
    "node": "12"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "yarn run test:lint && yarn run test:flow && yarn run test:unit && yarn run test:lighthouse",
    "test:flow": "flow",
    "test:lint": "standard | snazzy",
    "test:lint:fix": "standard --fix | snazzy",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:coverage": "codecov",
    "test:lighthouse": "yarn run build && lhci autorun",
    "postbuild": "next-sitemap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@mapbox/rehype-prism": "^0.5.0",
    "date-fns": "^2.16.1",
    "disqus-react": "^1.0.11",
    "gray-matter": "^4.0.2",
    "lazysizes": "^5.3.0",
    "lodash.debounce": "^4.0.8",
    "lodash.groupby": "^4.6.0",
    "next": "^10.0.5",
    "next-pwa": "^5.0.5",
    "next-seo": "^4.19.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intersection-observer": "^8.31.0",
    "rehype-preset-minify": "^5.1.0",
    "rehype-stringify": "^8.0.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-external-links": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.1.0",
    "unified": "^9.2.0"
  },
  "devDependencies": {
    "@babel/preset-flow": "^7.12.13",
    "@lhci/cli": "^0.7.0",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.8.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "flow-bin": "^0.144.0",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.5.4",
    "next-sitemap": "^1.4.17",
    "react-test-renderer": "^17.0.1",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@babel/preset-flow"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest"
    ],
    "ignore": [
      "public/**/*"
    ],
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "$Diff",
      "fetch"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test:flow && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn run test:lint:fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/__tests__/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy",
      "src/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/**/*.(spec).(js)"
    ]
  }
}
