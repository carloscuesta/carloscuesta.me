{
  "name": "carloscuesta.me",
  "version": "6.0.0",
  "engines": {
    "node": "20"
  },
  "description": "Carlos Cuesta website.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "pnpm run test:lint && pnpm run tscheck && pnpm run test:unit && pnpm run test:lighthouse",
    "tscheck": "pnpm tsc --noEmit",
    "test:lint": "eslint src && prettier --check src",
    "test:unit": "jest --coverage",
    "test:watch": "NODE_ENV=test TZ=UTC jest --watch",
    "test:lighthouse": "pnpm run build && lhci autorun",
    "postbuild": "rm -rf public/mockServiceWorker.js && next-sitemap",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/carloscuesta.me.git"
  },
  "author": "Carlos Cuesta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/carloscuesta.me/issues"
  },
  "homepage": "https://github.com/carloscuesta/carloscuesta.me#readme",
  "dependencies": {
    "@headlessui/react": "2.1.9",
    "@plaiceholder/next": "2.5.0",
    "@types/lodash.truncate": "4.4.9",
    "@vercel/analytics": "^1.3.1",
    "@vercel/kv": "0.2.2",
    "@vercel/speed-insights": "1.0.12",
    "body-scroll-lock": "4.0.0-beta.0",
    "date-fns": "^4.1.0",
    "disqus-react": "^1.1.5",
    "feed": "4.2.2",
    "gray-matter": "^4.0.3",
    "lodash.groupby": "^4.6.0",
    "lodash.truncate": "4.4.2",
    "next": "14.2.14",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.5.0",
    "next-themes": "0.3.0",
    "plaiceholder": "2.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.13.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-preset-minify": "7.0.0",
    "rehype-pretty-code": "0.14.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "10.0.0",
    "rehype-wrap-all": "^1.1.0",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.0",
    "remark-toc": "^9.0.0",
    "satori": "0.10.13",
    "sharp": "0.32.6",
    "shiki": "1.15.2",
    "sprinkles-vscode": "2.7.0",
    "swr": "2.2.5",
    "tailwind-scrollbar-hide": "1.1.7",
    "unified": "11.0.5"
  },
  "devDependencies": {
    "@lhci/cli": "^0.14.0",
    "@tailwindcss/typography": "0.5.15",
    "@testing-library/react": "16.0.1",
    "@types/body-scroll-lock": "3.1.2",
    "@types/jest": "29.5.13",
    "@types/lodash.groupby": "4.6.7",
    "@types/react": "18.3.3",
    "@types/react-test-renderer": "18.0.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "autoprefixer": "10.4.20",
    "classix": "2.1.38",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react": "^7.37.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.2.2",
    "msw": "2.4.9",
    "next-sitemap": "^4.2.3",
    "postcss": "8.4.38",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.1",
    "react-test-renderer": "^18.2.0",
    "tailwind-merge": "2.5.2",
    "tailwindcss": "3.4.4",
    "typescript": "5.4.5",
    "uglify-js": "3.19.3",
    "vfile": "6.0.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "jest": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:import/typescript",
      "plugin:@next/next/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "next/babel"
        ]
      }
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "@next/next/no-img-element": "off",
      "@typescript-eslint/no-var-requires": "off",
      "react/no-unescaped-entities": "off"
    },
    "overrides": [
      {
        "files": [
          "*.spec.tsx",
          "stubs.ts",
          "**/__mocks__/*.ts"
        ],
        "rules": {
          "react/display-name": 0,
          "react/prop-types": 0,
          "@next/next/no-css-tags": 0
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "react/no-unknown-property": [
            2,
            {
              "ignore": [
                "jsx",
                "global"
              ]
            }
          ]
        }
      },
      {
        "files": [
          "opengraph-image.tsx"
        ],
        "rules": {
          "react/no-unknown-property": [
            2,
            {
              "ignore": [
                "tw"
              ]
            }
          ]
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "alias": {
          "map": [
            [
              "src",
              "./src"
            ]
          ]
        }
      },
      "typescript": true,
      "node": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "src/**/*.md": [
      "prettier --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "pnpm@9.1.4"
}
